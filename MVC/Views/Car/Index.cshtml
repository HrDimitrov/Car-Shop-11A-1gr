@model IEnumerable<MVC.Models.Car>

@{
    ViewBag.Title = "Списък с коли";
}

<h2>Списък с коли</h2>




<div class="container my-5">
    <h1 class="text-center mb-4 fw-bold">Product List</h1>
    <div class="row g-4">
        @foreach (var p in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card shadow-sm border-0 h-100">
                    <img src="https://www.byd.com/content/dam/byd-site/eu/product/seal/pc/section01.jpg" class="card-img-top rounded-top" alt="@p.Price" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary fw-bold">@p.Brand</h5>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="fw-semibold fs-5 text-success">@p.Price.ToString("N2") лв.</span>
                            <a href="@Url.Action("Details", "Product", new { id = p.Id })" class="btn btn-outline-primary btn-sm">Детайли</a>
                        </div>
                        <form asp-controller="Cart" asp-action="Add" method="post" class="mt-2">
                            <input type="hidden" name="motorId" value="@p.Id" />
                            <input type="number" name="quantity" value="1" min="1" class="form-control form-control-sm mb-1" style="width:60px;" />
                            <button type="submit" class="btn btn-sm btn-primary w-100">
                                <i class="bi bi-cart-plus"></i> Добави
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>







